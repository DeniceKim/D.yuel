{
  "type": "module",
  "scripts": {
    "sass:build": "sass src:dist --style=compressed --quiet-deps --verbose",
    "sass:watch": "sass --watch src:dist --style=compressed --quiet-deps --verbose",
    "sass:fix": "npm-run-all sass:division sass:module sass:color sass:strict-unary sass:calc-interpolation",
    "sass:division": "sass-migrator division src",
    "sass:module": "sass-migrator module src",
    "sass:color": "sass-migrator color src",
    "sass:strict-unary": "sass-migrator strict-unary src",
    "sass:calc-interpolation": "sass-migrator calc-interpolation src",
    "sass:forward": "sass-migrator module src --forward all",
    "sass:prefix": "sass-migrator module src --remove-prefix old-",
    "sass:migrate": "npm-run-all sass:division sass:module sass:color sass:strict-unary sass:calc-interpolation sass:forward",
    
    "dev": "npm-run-all sass:build dev:vite",
    "dev:vite": "vite --mode test",
    
    "build": "npm-run-all sass:build build:vite",
    "build:vite": "vite build --mode development",
    
    "build:ssg": "vite build --ssg", 
    "serve:ssg": "npx serve -s dist", 
    
    "preview": "vite preview",
    "format": "prettier --write src/",
    "clean": "rimraf node_modules && rimraf dist && rimraf .cache && npm cache clean --force",
    
    "test": "vitest",
    "analyze": "vite build --mode analyze",
    "serve:prod": "vite preview --port 8080"
  },
  "dependencies": {
    "axios": "^1.5.1",
    "dayjs": "^1.11.9",
    "glob": "^11.0.0",
    "jquery": "^3.7.1",
    "pinia": "^2.2.7",
    "swiper": "^9.4.1",
    "vite-ssg": "^25.0.0",
    "vue": "^3.4.21",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.2.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.1",
    "sass": "^1.82.0",
    "sass-loader": "^13.2.0",
    "sass-migrator": "^2.2.1",
    "stylelint": "^14.14.0",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-scss": "^5.3.0",
    "vite": "^5.4.11",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-static-copy": "^2.2.0",
    "vite-plugin-vue-devtools": "^7.0.18",
    "vite-plugin-vue-setup-extend": "^0.4.0"
  },
  "sassOptions": {
    "quietDeps": true
  }
}
